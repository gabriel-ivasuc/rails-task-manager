<h2> <%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "Completed" : "Not completed" %></p>
<%= link_to 'Back to My tasks', tasks_path %>
<button class="btn btn-danger" type="submit">
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</button>
